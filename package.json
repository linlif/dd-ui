{
    "name": "dd-ui-react",
    "version": "0.1.0",
    "private": false,
    "main": "build/index.js",
    "module": "build/index.js",
    "types": "build/index.d.ts",
    "decription": "A react UI component",
    "author": "linlif",
    "keyword": [
        "UI",
        "React",
        "Component"
    ],
    "license": "MIT",
    "repository": {
        "types": "git",
        "url": "https://github.com/linlif/dd-ui-reacts.git"
    },
    "files": [
        "build"
    ],
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.30",
        "@fortawesome/free-solid-svg-icons": "^5.14.0",
        "@fortawesome/react-fontawesome": "^0.1.11",
        "normalize-scss": "^7.0.1",
        "react-transition-group": "^4.4.1",
        "typescript": "~3.7.2"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": "^4.3.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run test:nowatch && npm run lint"
        }
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "npm run clean && npm run build-ts && npm run build-css",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "sb": "start-storybook -p 6006 -s public",
        "build-sb": "build-storybook -s public",
        "build-ts": "tsc -p tsconfig.build.json",
        "build-css": "node-sass ./src/styles/index.scss ./build/index.css",
        "clean": "rimraf ./build",
        "lint": "eslint --ext js,ts,jsx src --max-warnings 5",
        "test:nowatch": "cross-env CI=true",
        "prepublishOnly": "npm run test:nowatch && npm run lint && npm run build"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@storybook/addon-actions": "^6.0.22",
        "@storybook/addon-essentials": "^6.0.22",
        "@storybook/addon-links": "^6.0.22",
        "@storybook/node-logger": "^6.0.22",
        "@storybook/preset-create-react-app": "^3.1.4",
        "@storybook/react": "^6.0.22",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/classnames": "^2.2.10",
        "@types/jest": "^24.0.0",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/react-transition-group": "^4.4.0",
        "babel-loader": "^8.1.0",
        "classnames": "^2.2.6",
        "cross-env": "^7.0.2",
        "husky": "^4.3.0",
        "node-sass": "^4.14.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-is": "^16.13.1",
        "react-scripts": "3.4.3",
        "rimraf": "^3.0.2"
    }
}